  "keywords": [
    "rot-js",
    "game"
  ],
  "bugs": {
    "url": "https://github.com/davidwarshaw/romeo-lima/issues"
  },
  "scripts": {
    "start": "yarn clean:folder && yarn dev",
    "dev": "webpack --display-error-details --config ./webpack/dev.config",
    "build": "yarn clean:folder && yarn build:webpack",
    "build:webpack": "cross-env NODE_ENV=production BABEL_ENV=production webpack --progress --config ./webpack/prod.config -p",
    "build:analyzer": "cross-env ANALYZER=true yarn build",
    "clean:folder": "rimraf game"
  },
  "dependencies": {
    "rot-js": "^0.6.5",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^1.2.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.5",
    "del": "^3.0.0",
    "eslint": "^4.5.0",
    "eslint-loader": "^1.9.0",
    "expose-loader": "^0.7.3",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "json-loader": "^0.5.7",
    "path-exists": "^3.0.0",
    "postcss-loader": "^2.0.6",
    "rimraf": "^2.6.1",
    "stats.js": "^0.17.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.5",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-merge": "^4.1.0"
  }
}
